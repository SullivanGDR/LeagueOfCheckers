{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center mt-5 pb-3">
    <form method="post" class="col-md-6 p-3 text-white px-4" style="background-color:rgba(31, 41, 55); border-radius: 16px;">
        {{ form_errors(registrationForm) }}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

        {{ form_start(registrationForm) }}

        {{ form_label(registrationForm.username, 'Nom d\'utilisateur') }}
        {{ form_row(registrationForm.username) }}

        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
        {{ form_row(registrationForm.plainPassword) }}
        
        {{ form_row(registrationForm.agreeTerms,{
            label: 'Accepter les termes '
        }) }}

        <div class="text-center mt-3">
            <span>Déjà inscrit ?
                <a href="{{ path('app_login') }}">Connectez-vous !</a>
            </span>
        </div>
        
        <div class="d-flex justify-content-center">
            <button class="btn btn-lg rounded-pill mt-3" type="submit" style="color:#d1d5db; background-color: #6d28d9;">
                S'inscrire
            </button>
        </div>

        {{ form_end(registrationForm) }}
    </form>
</div>
{% endblock %}
