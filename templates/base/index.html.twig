{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	Home
{% endblock %}

{% block body %}
<style>
.damier {
    width: 800px; /* Ajustez la largeur et la hauteur selon vos besoins */
    height: 800px;
    display: grid;
    grid-template-columns: repeat(10, 1fr); /* 8 colonnes pour un damier 8x8 */
    grid-template-rows: repeat(10, 1fr); /* 8 lignes pour un damier 8x8 */
	border: 4mm ridge rgba(211, 220, 50, .6);
	border-radius: 5px;
}

.case {
    width: 100%;
    height: 100%;
    display:flex; 
    justify-content: center;
    align-items: center;
}

.case-noire {
    width: 100%;
    height: 100%;
    display:flex; 
    justify-content: center;
    align-items: center;
    background-color: black;
}

.case-blanche {
    width: 100%;
    height: 100%;
    display:flex; 
    justify-content: center;
    align-items: center;
    background-color: white;
}

.center{
    display:flex; 
    justify-content: center;
    align-items: center;
}
.pion-noir {
    width: 50px; /* Ajustez la taille du pion selon vos besoins */
    height: 50px;
    background-color: black; 
    border-radius: 50%; 
    border:2px solid white;
    color: white;
    display:flex; 
    justify-content: center;
    align-items: center;
    transition: transform 0.3s ease-in-out;
}
.pion-blanc {
    width: 50px; /* Ajustez la taille du pion selon vos besoins */
    height: 50px;
    background-color: white; 
    border-radius: 50%; 
    border:2px solid white;
    color: black;
    display:flex; 
    justify-content: center;
    align-items: center;
    transition: transform 0.3s ease-in-out;
}

.pion-noir:hover {
    transform: scale(1.2);
}

.pion-blanc:hover {
    transform: scale(1.2);
}

.surligne{
    transform: scale(1.2);
    border-color:#ff2b4b;
}
/* <span class="pion-noir"></span> <span class="pion-blanc"></span>  */
</style>
<div class="container d-flex justify-content-center">
    <div class="damier" id="damier">
		
    </div>
</div>


{% endblock %}
    
{% block javascripts %}
    <script type="text/javascript" src="js/damier.js"></script>
{% endblock %}